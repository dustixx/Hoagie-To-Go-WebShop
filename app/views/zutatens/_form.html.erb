<div class="columns">
  <div class="column is-8 is-centered">

    <%= simple_form_for @zutaten, html: { multipart: true } do |f| %>
      <%= f.error_notification %>

        <div class="columns">

      

        <div class="field">
          <div class="control">
            <%= f.input :text, required: true, input_html: { class:"textarea" }, wrapper: false, label_html: { class:"label" } %>
          </div>
        </div>

            
        

       
         </div>

        <div class="field">
          <div class="control">
            <label class="label">Lad ein Bild hoch</label>
              <div class="file">
              <label class="file-label">
                <%= f.input :image, as: :file, input_html: { class:"file-input instrument-image" }, label: false, wrapper: false %>
                  <span class="file-cta">
                    <span class="file-icon"><i class="fa fa-upload"></i></span>
                    <span class="file-label">Wähl deine Datei aus…</span>
                  </span>
              </label>
              </div>
            </div>
          </div>
          <output id="list"></output>
        <hr />

        <div class="field is-grouped">
          <div class="control">
            <%= f.button :submit, class: 'button is-warning' %>
            <%= link_to 'Cancel', reviews_path, class:'button is-light' %>
          </div>
        </div>

      <% end %>
  </div>
</div>